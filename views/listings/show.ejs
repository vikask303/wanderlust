<% layout("layouts/boilerplate") -%>

<body>
  <div id="show" class="row">
    <div class="col-8 offset-3">
      <h3><%= listing.title %></h3>
    </div>
    <div class="col-6 offset-3">
      <img src="<%= listing.image.url %>" class="card-img-top show-img" style="height: 20rem;" alt="..." />
      <p>Owned by <i><%= listing.owner.username %></i></p>
      <p><%= listing.description %></p>
      <p>â‚¹ <%= listing.price.toLocaleString("en-IN") %></p>
      <p><%= listing.location %></p>
      <p><%= listing.country %></p>

      <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
        <form
        style="display: inline-block"
        method="get"
        action="/listings/<%= listing._id %>/edit"
        >
        <button class="btn btn-primary">Edit</button>
        </form>
        <form
        style="display: inline-block"
        method="post"
        action="/listings/<%= listing._id %>?_method=DELETE"
        >
        <button class="btn btn-danger">Delete</button>
        </form>
      <% } %>
    </div>
    <br><br><br>  
  </div>
  <div class="col-8 offset-3 mb-3 mt-3">
    <% if(currUser) { %>
      <h4>Leave a Review</h4>
        <form method="post" action="/listings/<%= listing._id %>/reviews" class="needs-validation" novalidate>
          <div>
          <label for="rating" class="form-label">Rating</label><br>
                <fieldset class="starability-basic">
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" checked />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            <label for="comment">Comment</label><br>
            <textarea name="review[comment]" id="comment" rows="3" cols="40" placeholder="Add a Comment" class="form-control" required></textarea><br>
            <button class="btn btn-outline-dark">Submit</button><br>
          </div>
        </form><br><br>
      <% } %>
    </div>

    <div class="col-8 offset-3 mb-3 mt-3">
      <p><b>All Reviews</b></p>
      <div class="row">
        <% for(review of listing.reviews) { %>
          <div class="card col-5 ms-3 mb-3 ">
            <div class="card-body">
              <h5 class="card-title">@<%= review.author.username %></h5>
               <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
              <div class="card-text">
                <i><%= review.comment %></i></div>
            </div>
            <% if(currUser){ %>
              <% if(currUser._id.equals(review.author._id)) { %>
                <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                  <button class="btn btn-danger mb-3 mt-3">Delete</button>
                </form>
                <% } %>
            <% } %>
              
          </div>
       
        <% } %>
        </div>
   </div>   
    
</body>
